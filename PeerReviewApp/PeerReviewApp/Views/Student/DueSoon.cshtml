@model IList<AssignmentVersion>
@{
    ViewData["Title"] = "Due Soon";
}

<h1 class="text-center fw-bolder">Assignments Due</h1>

@if (Model.Any())
{
    <ul class="list-group">
        @foreach (var version in Model)
        {
            <li class="list-group-item">
                <h3 class="d-inline">@version.ParentAssignment.Course.Name - @version.ParentAssignment.Title</h3>
                <a class="d-inline float-end p-2" asp-action="DetailedAssignment" asp-route-assignmentId="@version.Id">Details</a>
                <h5>Due on: @(version.ParentAssignment.DueDate)</h5>
            </li>
        }
    </ul>
}
else
{
    <div class="alert alert-info">
        You do not currently have any graded assignments.
    </div>
}