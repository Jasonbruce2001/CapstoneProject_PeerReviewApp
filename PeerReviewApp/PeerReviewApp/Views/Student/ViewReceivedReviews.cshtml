@model IList<Review>
@{
    ViewData["Title"] = "My Reviews";
}

<div class="container-fluid">
    <div class="row mb-2">
        <div class="col"><a class="btn btn-secondary" asp-action="Index">Back</a></div>
        <div class="col-9"></div>
    </div>
    
    <h1 class="text-center fw-bolder">Received Reviews</h1>

    @if (Model.Any())
    {
        <ul class="list-group">
            @foreach (var r in Model)
            {
                <li class="list-group-item">
                    @*<h3>@version.Assignment.Course.Name - @version.Assignment.Title</h3>*@
                    <h5>Reviewer: @r.Reviewer</h5>
                    <a href="~/StaticFiles/UserUploads/@r.ReviewDocument.FilePath" download>Download Review</a>
                </li>
            }
        </ul>
    }
    else
    {
        <div class="alert alert-info">
            You are not currently assigned to any reviews.
        </div>
    }
</div>