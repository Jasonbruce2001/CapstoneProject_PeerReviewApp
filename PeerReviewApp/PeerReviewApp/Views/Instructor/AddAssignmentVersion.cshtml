@model AssignmentVersionVM
@{
    ViewData["Title"] = "Add Assignment Version";
}

<form asp-action="AddAssignmentVersion" asp-controller="Instructor" method="post">
    <div class="form-group">
        <label asp-for="AssignmentId">Parent Assignment:</label>
        <span asp-validation-for="AssignmentId" class="text-danger"></span>
        <select asp-for="AssignmentId" class="form-control"
                asp-items="@(new SelectList(Model.Assignments, nameof(Assignment.Id), nameof(Assignment.Title)))">
        </select>
    </div>
        
    <div class="form-group">
        <label asp-for="AssnVersion.Name">Version Name</label>
        <span asp-validation-for="AssnVersion.Name" class="text-danger"></span>
        <input asp-for="AssnVersion.Name" class="form-control p-3" required>
    </div>

    <div class="form-group">
        <label asp-for="AssnVersion.TextInstructions">Written instructions</label>
        <span asp-validation-for="AssnVersion.TextInstructions" class="text-danger"></span>
        <input asp-for="AssnVersion.TextInstructions" class="form-control p-3" required>
    </div>

    <div class="form-group">
        <label asp-for="InstructionsId">Instructions Form: </label>
        <span asp-validation-for="InstructionsId" class="text-danger"></span>
        <select asp-for="InstructionsId" class="form-control"
                asp-items="@(new SelectList(Model.Documents, nameof(Document.Id), nameof(Document.Name)))">
        </select>
    </div>

    <div class="form-group">
        <label asp-for="ReviewFormId">Review Form:</label>
        <span asp-validation-for="ReviewFormId" class="text-danger"></span>
        <select asp-for="ReviewFormId" class="form-control"
                asp-items="@(new SelectList(Model.Documents, nameof(Document.Id), nameof(Document.Name)))">
        </select>
    </div>
    

    <div class="form-group">
        <a href="@Url.Action("Index", "Instructor")" class="btn btn-outline-danger">Cancel</a>
        <input type="submit" value="Add Course" class="btn btn-primary" />
    </div>

</form>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}