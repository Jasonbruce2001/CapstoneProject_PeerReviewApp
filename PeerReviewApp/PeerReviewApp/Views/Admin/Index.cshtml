@using System.Linq;

@using PeerReviewApp.Models;

@{
    ViewData["Title"] = "Admin Dashboard";
}

<style>
    .bg-light-gray {
        background-color: #f8f9fa;
    }

    .btn-custom {
        width: 200px;
        margin-bottom: 10px;
    }
</style>

<div class="container bg-light-gray p-4">
    <h1>Welcome, Admin!</h1>

    <div class="mb-4">
        <a asp-controller="Admin" asp-action="ManageInstitutions" class="btn btn-primary btn-custom">Manage Institutions</a>
        <a asp-controller="Admin" asp-action="ManageInstructors" class="btn btn-primary btn-custom">Manage Instructors</a>
        <a asp-controller="Admin" asp-action="ManageStudents" class="btn btn-primary btn-custom">Manage Students</a>
    </div>

    <div class="row">
        <div class="col-md-3">
            <div class="card">
                <div class="card-body">
                    <h5 class="card-title">Total Institutions</h5>
                    <p class="card-text">@Model.TotalInstitutions</p>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card">
                <div class="card-body">
                    <h5 class="card-title">Active Instructors</h5>
                    <p class="card-text">@Model.ActiveInstructors</p>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card">
                <a asp-action="ViewCourses">
                    <div class="card-body">
                        <h5 class="card-title">Active Courses</h5>
                        <p class="card-text">@Model.ActiveCourses</p>
                    </div>
                </a>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card">
                <div class="card-body">
                    <h5 class="card-title">Total Students</h5>
                    <p class="card-text">@Model.TotalStudents</p>
                </div>
            </div>
        </div>
    </div>

    <div class="mt-4">
        <h4>Institutions</h4>
        <ul class="list-unstyled">
            @foreach (var institution in Model.Institutions)
            {
                <li>@institution.Name</li>
            }
        </ul>
    </div>

    <div class="mt-4">
        <h4>Recent System Actions</h4>
        <ul class="list-unstyled">
            @foreach (var action in Model.RecentActions)
            {
                <li>@action</li>
            }
        </ul>
    </div>

    <div class="mt-4">
        <h4>Recent Password Reset Requests</h4>
        @if (Model.RecentPasswordResetRequests != null && Model.RecentPasswordResetRequests.Count > 0)
        {
            <ul class="list-group">
                @foreach (var request in Model.RecentPasswordResetRequests)
                {
                    <li class="list-group-item list-group-item-warning">@request</li>
                }
            </ul>
        }
        else
        {
            <p class="text-muted">No recent password reset requests.</p>
        }
    </div>
</div>