    </div>

    <div class="mt-4">
        <h4>Institutions</h4>
        <ul class="list-unstyled">
            @foreach (var institution in Model.Institutions)
            {
                <li>@institution.Name</li>
            }
        </ul>
    </div>

    <div class="mt-4">
        <h4>Recent System Actions</h4>
        <ul class="list-unstyled">
            @foreach (var action in Model.RecentActions)
            {
                <li>@action</li>
            }
        </ul>
    </div>
</div>