@model AdminDashboardVM

@{
    ViewData["Title"] = "Admin Dashboard";
}

<div class="container bg-white p-4">
    <h1>Welcome, Admin!</h1>

    <div class="row">
        <div class="col dashboardWidget spacingRight btn btn-outline-primary">
            <a asp-action="ManageInstitutions">
                <div class="sizeWrapper">Active Institutions: <span class="fw-bolder">@Model.TotalInstitutions</span></div>
            </a>
        </div>
        <div class="col dashboardWidget spacingRight btn btn-outline-primary">
            <a asp-action="ManageInstructors">
                <div class="sizeWrapper">Active Instructors: <span class="fw-bolder">@Model.ActiveInstructors</span></div>
            </a>
        </div>
        <div class="col dashboardWidget spacingRight btn btn-outline-primary">
            <a asp-action="ViewCourses">
                <div class="sizeWrapper">Active Courses: <span class="fw-bolder">@Model.ActiveCourses</span></div>
            </a>
        </div>
        <div class="col dashboardWidget spacingRight btn btn-outline-primary">
            <a asp-action="ManageStudents">
                <div class="sizeWrapper">Active Students: <span class="fw-bolder">@Model.TotalStudents</span></div>
            </a>
        </div>
