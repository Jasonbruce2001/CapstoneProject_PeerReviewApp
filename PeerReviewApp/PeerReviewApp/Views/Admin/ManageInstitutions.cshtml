@model List<PeerReviewApp.Models.Institution>
@{
    ViewData["Title"] = "Manage Institutions";
}

<div class="container bg-light-gray p-4">
    <h1>Manage Institutions</h1>

    <div class="mb-3">
        <a asp-action="CreateInstitution" class="btn btn-primary">Create New Institution</a>
        <a asp-action="Index" class="btn btn-secondary">Back to Dashboard</a>
    </div>

    @if (TempData["Message"] != null)
    {
        <div class="alert alert-success">
            @TempData["Message"]
        </div>
    }

    <table class="table table-bordered table-striped">
        <thead>
            <tr>
                <th>Institution ID</th>
                <th>Name</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var institution in Model)
            {
                <tr>
                    <td>@institution.Id</td>
                    <td>@institution.Name</td>
                    <td>
                        <a asp-action="EditInstitution" asp-route-id="@institution.Id" class="btn btn-info btn-sm">Edit</a>
                        <a asp-action="DeleteInstitution" asp-route-id="@institution.Id" class="btn btn-danger btn-sm" onclick="return confirm('Are you sure you want to delete this institution?')">Delete</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>