@model IList<Course>

@{
    ViewData["Title"] = "All Courses";

    var institutions = new List<Institution>();

    foreach (var c in Model)
    {
        institutions.Add(c.Institution);
    }
}

<script>
    function toggleFilters()
    {
        //get reference to div containing form
        let element = document.getElementById("filters")
        
        if(element.classList.contains("formHidden"))
        {
            //if elements class list already contains formHidden, remove it so it is visible
            element.classList.remove("formHidden");
        } else {
            //otherwise hide form
            element.classList.add("formHidden");
        }
    }
</script>

<div class="container-fluid pb-4">
    <div class="row">
        <div class="col">
            <a asp-action="Index" class="btn btn-secondary px-2">Back</a>
        </div>
        <div class="col-9"></div>
    </div>
</div>
<div class="container-fluid courseList">
    <div class="row">
        <h1>All Courses</h1>
    </div>
    
    <!-- Filters -->
    <div class="row">
        <div class="col-6"></div>
        <div class="col">
            <div class="row formHidden" id="filters">
                <form method="post" action="/Admin/filterCourses" class="form-inline">
                    <label for="nameSearch">Class Name</label>
                    <input name="nameSearch" id="nameSearch"/>

                    <label for="institutionName">Institution</label>
                    <select name="institutionName" id="institutionName">
                        @foreach (var i in institutions)
                        {
                            <option value="@i.Id">@i.Name</option>
                        }
                    </select>

                    <button type="submit" class="btn btn-primary">Submit</button>
                </form>
            </div>
            <div class="row mb-5 me-4 mt-2">
                <button class="btn btn-secondary btn-sm btn-thin" onclick="toggleFilters()">Toggle Filters</button>
            </div>
        </div>
    </div>
    
    <div class="row">
        <table class="table table-bordered table-striped">
            <thead>
                <th>Name</th>
                <th>Description</th>
                <th>Institution</th>
                <th>Number of Instances</th>
            </thead>
            <tbody>
            @if (Model.Any())
            {
                @foreach (var c in Model)
                {
                    <tr>
                        <td>@c.Name</td>
                        <td>@c.Description</td>
                        <td>@c.Institution.Name</td>
                        <td>@c.Subclasses.Count()</td>
                    </tr>
                }
            }
            else
            {
                <h4>No Courses Found</h4>
            }
            </tbody>
        </table>
    </div>
</div>