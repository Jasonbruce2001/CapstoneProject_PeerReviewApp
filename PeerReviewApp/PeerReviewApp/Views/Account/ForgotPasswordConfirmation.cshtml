@{
    ViewData["Title"] = "Forgot Password Confirmation";
}

<div class="container d-flex justify-content-center">
    <div class="col-md-6">
        <h2>Forgot Password Confirmation</h2>
        <hr />

        <div class="alert alert-success">
            <p>
                If you have an account with us, we have sent a password reset link to your email.
                Please check your email to reset your password.
            </p>
        </div>

        @if (TempData["ResetLink"] != null)
        {
            <div class="alert alert-info">
                <p>
                    <strong>Note:</strong> For development purposes, you can use the link below:
                </p>
                <a href="@TempData["ResetLink"]">Reset Password</a>
            </div>
        }

        <div class="mt-3">
            <a asp-action="LogIn" class="btn btn-primary">Return to Login</a>
        </div>
    </div>
</div>